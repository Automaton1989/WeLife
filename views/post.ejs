<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeLife Post Page</title>
    <meta
      name="description"
      content="The page for users to post thier moments."
    />
    <meta name="author" content="Anni Lin & Xuejia Yang" />

    <!-- Bootstrap core CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="./stylesheets/post.css" />
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-light navbar-light">
      <div class="container">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navmenu"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navmenu">
          <form class = "ms-auto" action="/logout?_method=DELETE" method="POST">
            <button class="btn btn-warning" type="submit">Log Out</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- main section -->
    <section class="main p-1 text-center">
      <div class="container">
        <!-- side bar -->
        <div class="sidebar col-2 bg-light">
          <a href="/" class="navbar-brand">
            <img
              class="me-2"
              width="70"
              height="48"
              src="./images/logo.png"
              alt="WeLife logo"
            />
            <span class="logo_name">WeLife</span>
          </a>
          <ul>
            <li>
              <a class="nav_btn btn btn-lg" href="./general.html">
                <i class="fas fa-home-lg"></i>
              </a>
            </li>
            <li>
              <a class="nav_btn btn btn-lg" href="./home.html">
                <i class="fas fa-user"></i>
              </a>
            </li>
          </ul>
        </div>
        <div class="post-input col-10">
          <h2 id="page-title">Show Your Beautiful Moments</h2>
          <form id="form-moment" onsubmit="onFormMomentSubmit(event)">
            <div class="form-group">
              <label for="title">Title</label>
              <br />
              <textarea name="title" rows="1.5" cols="50"></textarea>
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <br />
              <textarea name="content" rows="5" cols="50"></textarea>
            </div>
            <div class="form-group">
              <label for="file">Photo</label>
              <input type="file" name="image" id="image" />
            </div>
            <button type="submit" class="btn btn-warning submit-btn">
              Share
            </button>
          </form>
          <div id="success-message"></div>
        </div>
      </div>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="./javascripts/post.js"></script>
  </body>
</html>
